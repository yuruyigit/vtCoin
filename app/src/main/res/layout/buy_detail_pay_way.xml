<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/buy_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_paddingLeftPercent="4.2%"
        app:layout_paddingRightPercent="4.3%"
        app:layout_paddingTopPercent="3.8%w"
        app:layout_paddingBottomPercent="3.8%w"
        >

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/payment_way"
                android:textColor="@color/text_1616"
                android:textSize="@dimen/text_size_17"
                app:layout_widthPercent="35%" />

            <LinearLayout
                android:id="@+id/choose_pay_layout"
                android:layout_width="wrap_content"
                app:layout_heightPercent="8%w">

                <TextView
                    android:id="@+id/pay_way_text"
                    android:layout_width="77dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_white0_blue5_left_5"
                    android:gravity="center"
                    android:text="@string/alipay"
                    style="@style/black5_15"
                    />

                <RelativeLayout
                    android:layout_width="77dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_blue6_right_5">

                    <ImageView
                        android:id="@+id/pay_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/business_down" />
                </RelativeLayout>
            </LinearLayout>
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="3.3%w"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/account"
                style="@style/black5_14"
                app:layout_widthPercent="35%" />

            <TextView
                android:id="@+id/account"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="13755546685"
                android:textColor="@color/text_1616"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/copy_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white0_blue1_2"
                app:layout_paddingLeftPercent="1.5%"
                app:layout_paddingRightPercent="1.5%"
                app:layout_paddingTopPercent="1.1%"
                app:layout_paddingBottomPercent="1.1%"
                android:text="@string/copy"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/text_size_12" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="2.8%w"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/name"
                style="@style/black5_14"
                app:layout_widthPercent="35%" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="吴雨后"
                android:textColor="@color/text_1616"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/copy_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white0_blue1_2"
                app:layout_paddingLeftPercent="1.5%"
                app:layout_paddingRightPercent="1.5%"
                app:layout_paddingTopPercent="1.1%"
                app:layout_paddingBottomPercent="1.1%"
                android:text="@string/copy"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/text_size_12" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/bank_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="2.8%w"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/open_name"
                style="@style/black5_14"
                app:layout_widthPercent="35%" />

            <TextView
                android:id="@+id/bank_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="深圳分行龙兴支行"
                android:textColor="@color/text_1616"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/copy_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white0_blue1_2"
                app:layout_paddingLeftPercent="1.5%"
                app:layout_paddingRightPercent="1.5%"
                app:layout_paddingTopPercent="1.1%"
                app:layout_paddingBottomPercent="1.1%"
                android:text="@string/copy"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/text_size_12" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:id="@+id/bank_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="2.8%w"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/bank_type"
                style="@style/black5_14"
                app:layout_widthPercent="35%" />

            <TextView
                android:id="@+id/bank_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="中国工商银行"
                android:textColor="@color/text_1616"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/copy_bank_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white0_blue1_2"
                app:layout_paddingLeftPercent="1.5%"
                app:layout_paddingRightPercent="1.5%"
                app:layout_paddingTopPercent="1.1%"
                app:layout_paddingBottomPercent="1.1%"
                android:text="@string/copy"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/text_size_12" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="2.8%w"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/pay_money"
                style="@style/black5_14"
                app:layout_widthPercent="35%" />

            <TextView
                android:id="@+id/pay_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="￥25.66"
                android:textColor="@color/text_1616"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/copy_pay_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white0_blue1_2"
                app:layout_paddingLeftPercent="1.5%"
                app:layout_paddingRightPercent="1.5%"
                app:layout_paddingTopPercent="1.1%"
                app:layout_paddingBottomPercent="1.1%"
                android:text="@string/copy"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/text_size_12" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="2.8%w"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/Transfer_postscript"
                style="@style/black5_14"
                app:layout_widthPercent="35%" />

            <TextView
                android:id="@+id/Transfer_postscript"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6541616165dASD"
                android:textColor="@color/text_1616"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/copy_Transfer_postscript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white0_blue1_2"
                app:layout_paddingLeftPercent="1.5%"
                app:layout_paddingRightPercent="1.5%"
                app:layout_paddingTopPercent="1.1%"
                app:layout_paddingBottomPercent="1.1%"
                android:text="@string/copy"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/text_size_12" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/qr_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.5dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/accept_qrcode"
                style="@style/black5_14"
                android:drawableRight="@mipmap/release_arrow"
                app:layout_widthPercent="73%" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/business_picture"
                android:drawablePadding="@dimen/dimen_6"
                app:layout_marginLeftPercent="35%"
                android:text="@string/qr_check_picture"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/text_size_14" />
        </com.zhy.android.percent.support.PercentRelativeLayout>


        <TextView
            android:id="@+id/pay_describe1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="4%w"
            android:text="@string/Transfer_postscript_tip"
            android:textColor="#ff4f4f"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/pay_describe2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="2%w"
            android:text="@string/Transfer_postscript_tip1"
            android:textSize="@dimen/text_12"
            android:textColor="@color/black5"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>


