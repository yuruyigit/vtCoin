<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/deal_item_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_paddingLeftPercent="4.2%"
        app:layout_paddingTopPercent="2.8%w"
        app:layout_paddingBottomPercent="2.8%w">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单信息"
            android:textColor="@color/text_1616"
            android:textSize="@dimen/text_size_17" />

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_paddingTopPercent="2.8%w"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/order1"
                android:textColor="@color/text_99999"
                android:textSize="@dimen/text_size_14"
                app:layout_widthPercent="35%" />

            <TextView
                android:id="@+id/order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="51656516Ffd456"
                android:textColor="@color/text_1616"
                android:textSize="@dimen/text_size_14" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_paddingTopPercent="2.3%w"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/service_charge"
                android:textColor="@color/text_99999"
                android:textSize="@dimen/text_size_14"
                app:layout_widthPercent="35%" />

            <TextView
                android:id="@+id/service_charge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00062 BTC"
                android:textColor="@color/text_1616"
                android:textSize="@dimen/text_size_14" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_paddingTopPercent="2.3%w"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/deal_unit_price"
                android:textColor="@color/text_99999"
                android:textSize="@dimen/text_size_14"
                app:layout_widthPercent="35%" />

            <TextView
                android:id="@+id/deal_unit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 26654.9"
                android:textColor="@color/text_1616"
                android:textSize="@dimen/text_size_14" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_paddingTopPercent="2.3%w"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/deal_num"
                android:textColor="@color/text_99999"
                android:textSize="@dimen/text_size_14"
                app:layout_widthPercent="35%" />

            <TextView
                android:id="@+id/deal_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.001BTC"
                android:textColor="@color/text_1616"
                android:textSize="@dimen/text_size_14" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_paddingTopPercent="2.3%w"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/service_charge_precent"
                android:textColor="@color/text_99999"
                android:textSize="@dimen/text_size_14"
                app:layout_widthPercent="35%" />

            <TextView
                android:id="@+id/service_charge_precent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2%"
                android:textColor="@color/text_1616"
                android:textSize="@dimen/text_size_14" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_paddingTopPercent="2.3%w"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/pay_way"
                android:textColor="@color/text_99999"
                android:textSize="@dimen/text_size_14"
                app:layout_widthPercent="35%" />

            <TextView
                android:id="@+id/pay_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信、支付宝"
                android:textColor="@color/text_1616"
                android:textSize="@dimen/text_size_14" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_paddingTopPercent="2.3%w"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/deal_total_prices"
                android:textColor="@color/text_99999"
                android:textSize="@dimen/text_size_14"
                app:layout_widthPercent="35%" />

            <TextView
                android:id="@+id/deal_total_prices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥25.66"
                android:textColor="@color/color_blue"
                android:textSize="@dimen/text_size_14" />
        </com.zhy.android.percent.support.PercentLinearLayout>

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_paddingTopPercent="2.3%w"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/order_state"
                android:textColor="@color/text_99999"
                android:textSize="@dimen/text_size_14"
                app:layout_widthPercent="35%" />

            <TextView
                android:id="@+id/order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待卖方通过"
                android:textColor="@color/text_1616"
                android:textSize="@dimen/text_size_14" />
        </com.zhy.android.percent.support.PercentLinearLayout>
   </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>


