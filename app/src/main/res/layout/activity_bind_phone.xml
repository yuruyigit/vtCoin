<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white0"
    android:orientation="vertical">


    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="8%"
        app:layout_paddingLeftPercent="4.2%"
        app:layout_paddingRightPercent="4.2%">
        <TextView
            style="@style/black1_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/have_bind_phone" />

        <TextView
            android:id="@+id/tv_phone"
            style="@style/black4_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="15007253417"
            app:layout_marginLeftPercent="26.1%" />
    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:layout_width="match_parent"
        app:layout_heightPercent="1.9%"
        android:background="@color/gray6"
        />

        <TextView
            android:id="@+id/change"
            style="@style/white0_15"
            android:layout_width="match_parent"
            app:layout_heightPercent="8%"
            android:background="@drawable/bg_blue1_5"
            android:gravity="center"
            android:text="@string/change_phone_num"
            app:layout_marginLeftPercent="4.2%"
            app:layout_marginRightPercent="4.2%"
            app:layout_marginTopPercent="5%" />
</com.zhy.android.percent.support.PercentLinearLayout>