<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/deal_item_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        app:layout_paddingBottomPercent="2%w"
        app:layout_paddingLeftPercent="4%"
        app:layout_paddingRightPercent="4%"
        app:layout_paddingTopPercent="2.5%w"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/coin_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="币煌币多"
                android:textColor="@color/text_1616"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/coin_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥23379.5"
                android:textColor="@color/text_green"
                android:textSize="@dimen/text_size_19" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_marginTopPercent="1%w">

            <TextView
                android:id="@+id/coin_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ID：651651"
                android:textColor="@color/text_99999"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/coin_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="限额：0.05~2"
                android:textColor="@color/text_99999"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginTopPercent="0.8%w"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/coin_deal_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/business_saction"
                    android:text="1002"
                    android:textColor="@color/text_99999"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/coin_deal_evaluate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@mipmap/business_score"
                    android:text="4.6"
                    android:textColor="@color/text_99999"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/coin_deal_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信、国内银行转账"
                android:textColor="@color/text_99999"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/color_c6c6c6" />
</com.zhy.android.percent.support.PercentLinearLayout>