<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:id="@+id/deal_item_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        app:layout_paddingTopPercent="3%w"
        app:layout_paddingBottomPercent="3%w"
        app:layout_paddingLeftPercent="4%"
        app:layout_paddingRightPercent="4%"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/text_99999"
            android:text="@string/order_number"
            />
            <TextView
                android:id="@+id/order_number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="39dp"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_1616"
                android:text="51656516Ffd456"
                />
            <TextView
                android:id="@+id/order_creat_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_99999"
                android:text="8分钟前"
                />
        </LinearLayout>
        <LinearLayout
            app:layout_paddingTopPercent="2%w"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/order_person_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_99999"
                android:text="@string/buy_person"
                />
            <TextView
                android:id="@+id/order_person"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="39dp"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_1616"
                android:text="极速听听吧（6516516）"
                />
        </LinearLayout>
        <LinearLayout
            app:layout_paddingTopPercent="2%w"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_99999"
                android:text="@string/unit_price"
                />
            <TextView
                android:id="@+id/order_unit_price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="39dp"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_1616"
                android:text="¥ 26555.9"
                />
        </LinearLayout>
        <LinearLayout
            app:layout_paddingTopPercent="2%w"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_99999"
                android:text="@string/num"
                />
            <TextView
                android:id="@+id/order_num"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="39dp"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_1616"
                android:text="0.001 BTC"
                />
        </LinearLayout>
        <LinearLayout
            app:layout_paddingTopPercent="2%w"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_99999"
                android:text="@string/total_prices"
                />
            <TextView
                android:id="@+id/total_prices"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="39dp"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_1616"
                android:text="¥ 26.66"
                />
        </LinearLayout>
        <LinearLayout
            app:layout_paddingTopPercent="2%w"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_99999"
                android:text="@string/state"
                />
            <TextView
                android:id="@+id/order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="39dp"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_green"
                android:drawableLeft="@drawable/dot_red"
                android:drawablePadding="10dp"
                android:text="待通过"
                />
        </LinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_f7f7f7" />
</com.zhy.android.percent.support.PercentLinearLayout>