<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="7.8%"
        app:layout_marginLeftPercent="4%"
        app:layout_marginRightPercent="4%">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/rl"
            >

            <TextView
                style="@style/black1_15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/code"
                />

            <com.block.vtCoin.widget.editText.ClearEditText
                android:id="@+id/et_code"
                style="@style/black1_14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/please_code"
                android:inputType="phone"
                app:layout_marginLeftPercent="12%"
                android:textColorHint="@color/gray0" />

        </com.zhy.android.percent.support.PercentLinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_0.5"
            android:background="@color/gray6"
            android:layout_below="@+id/rl"
            android:layout_toLeftOf="@+id/get_code"
            />
        <TextView
            android:id="@+id/get_code"
            style="@style/white0_12"
            android:layout_width="wrap_content"
            app:layout_widthPercent="27.4%"
            app:layout_heightPercent="8.8%w"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_blue1_5"
            android:text="@string/get_code" />

    </com.zhy.android.percent.support.PercentRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="@color/gray7"
        app:layout_heightPercent="1.9%"/>
    <TextView
        android:id="@+id/next"
        style="@style/white0_16"
        android:layout_width="match_parent"
        app:layout_heightPercent="7.8%"
        android:background="@drawable/bg_before0_5"
        android:gravity="center"
        android:text="@string/next"
        android:textColor="@drawable/text_gray9_white0_selector"
        app:layout_marginLeftPercent="4%"
        app:layout_marginRightPercent="4%"
        app:layout_marginTopPercent="5.7%" />

</com.zhy.android.percent.support.PercentLinearLayout>


