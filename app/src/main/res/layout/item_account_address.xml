<?xml version="1.0" encoding="utf-8"?>
<com.block.vtCoin.mine.setting.account_address.adapter.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white0"
    android:clickable="true"
    android:paddingBottom="1dp"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:id="@+id/item"
            android:layout_width="match_parent"
            app:layout_heightPercent="16%w"
            app:layout_paddingLeftPercent="4%">
            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/administration_ltc" />

            <com.zhy.android.percent.support.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_marginLeftPercent="10%">

                <TextView
                    android:id="@+id/tv_name"
                    style="@style/black1_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阳光听听" />

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/black4_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_marginTopPercent="2%w"
                    android:text="3546AWRG1DVS5653EGSDV456VGF" />
            </com.zhy.android.percent.support.PercentLinearLayout>
        </com.zhy.android.percent.support.PercentRelativeLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>


    <RelativeLayout
        android:id="@+id/rl_edit"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/blue5">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/set_up_edit"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_delete"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@color/red2">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/set_up_delete"
            />
    </RelativeLayout>
</com.block.vtCoin.mine.setting.account_address.adapter.SwipeMenuLayout>