<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="match_parent"
        app:layout_heightPercent="7.8%"
        android:gravity="center_vertical"
        android:text="@string/second_login_verify"
        style="@style/black1_15"
        app:layout_paddingLeftPercent="4%"
        app:layout_paddingRightPercent="4%"
        android:drawableRight="@mipmap/release_slide"
        android:background="@color/white0"
        />

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:id="@+id/rl_type"
        android:layout_width="match_parent"
        android:background="@color/white0"
        app:layout_heightPercent="7.8%"
        app:layout_paddingLeftPercent="4%"
        app:layout_paddingRightPercent="4%"
        app:layout_marginTopPercent="1.9%"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/verify_way"
            style="@style/black5_15"
            android:layout_centerVertical="true"
            android:drawableRight="@mipmap/release_arrow"
            />
        <TextView
            android:id="@+id/tv_type"
            style="@style/black5_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            app:layout_marginRightPercent="6.5%"
            android:text="@string/msm" />

    </com.zhy.android.percent.support.PercentRelativeLayout>

</com.zhy.android.percent.support.PercentLinearLayout>


