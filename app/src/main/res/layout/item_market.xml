<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_paddingBottomPercent="3%w"
    app:layout_paddingLeftPercent="4%"
    app:layout_paddingRightPercent="4%"
    app:layout_paddingTopPercent="4%w"
    >
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/icon_mine"
        app:layout_paddingBottomPercent="3%w"
        app:layout_paddingRightPercent="3%"
        app:layout_paddingLeftPercent="4%"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_paddingBottomPercent="3%w"
        app:layout_paddingRightPercent="4%"
        app:layout_paddingTopPercent="4%w"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OKCoin"
                android:textColor="@color/text_1616"
                android:textSize="@dimen/text_size_14"

                />

            <TextView
                android:id="@+id/tv_cny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_name"
                android:layout_centerHorizontal="true"
                android:text="5222.49 CNY"
                android:textColor="@color/text_1616"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/tv_cny_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_name"
                android:layout_alignParentRight="true"
                android:text="0.00 CNY"
                android:drawableLeft="@mipmap/quotation_rise_01"
                android:drawablePadding="@dimen/dimen_8"
                android:textColor="@color/text_1616"
                android:textSize="@dimen/text_size_11" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4">

            <TextView
                android:id="@+id/tv_vol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成交量 31316.8650"
                android:textColor="@color/text_99999"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/tv_usd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="2351.11USD"
                android:textColor="@color/text_99999"
                android:textSize="@dimen/text_size_11" />

            <TextView
                android:id="@+id/tv_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="（0.00%）"
                android:textColor="@color/text_99999"
                android:textSize="@dimen/text_size_11" />
        </RelativeLayout>
    </LinearLayout>
</com.zhy.android.percent.support.PercentLinearLayout>