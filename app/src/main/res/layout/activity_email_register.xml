<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <com.zhy.android.percent.support.PercentLinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_marginLeftPercent="10%"
            app:layout_marginRightPercent="10%"
            app:layout_marginTopPercent="17%">

            <TextView
                style="@style/black1_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/email_address" />

            <com.block.vtCoin.widget.editText.ClearEditText
                android:id="@+id/et_email"
                style="@style/black1_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_32"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_email"
                android:inputType="textEmailAddress"
                android:paddingBottom="@dimen/dimen_8"
                android:paddingTop="@dimen/dimen_8"
                android:textColorHint="@color/gray0" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/dimen_16"
            android:layout_marginRight="@dimen/dimen_16"
            android:background="@color/blue1" />

        <TextView
            android:id="@+id/next"
            style="@style/white0_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_before0_5"
            android:gravity="center"
            android:padding="@dimen/dimen_12"
            android:text="@string/next"
            android:textColor="@drawable/text_gray9_white0_selector"
            app:layout_marginLeftPercent="4%"
            app:layout_marginRightPercent="4%"
            app:layout_marginTopPercent="6.5%" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="4%"
            app:layout_marginRightPercent="4%"
            app:layout_marginTopPercent="2%">

            <TextView
                android:id="@+id/agree"
                style="@style/black1_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/circle_click"
                android:drawablePadding="@dimen/dimen_4"
                android:paddingBottom="@dimen/dimen_4"
                android:paddingTop="@dimen/dimen_4"
                android:text="@string/agree" />

            <TextView
                android:id="@+id/terms"
                style="@style/green1_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/agree"
                android:padding="@dimen/dimen_4"
                android:text="@string/service_terms" />

            <TextView
                android:id="@+id/phone_register"
                style="@style/blue1_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawablePadding="@dimen/dimen_4"
                android:drawableRight="@mipmap/right1"
                android:paddingBottom="@dimen/dimen_4"
                android:paddingLeft="@dimen/dimen_8"
                android:paddingTop="@dimen/dimen_4"
                android:text="@string/phone_register" />

        </RelativeLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>
</ScrollView>


