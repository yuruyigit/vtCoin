<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white0"
    android:orientation="vertical">

    <TextView
        android:id="@+id/buy_recode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="7.8%"
        android:text="@string/buy_deal_recode"
        app:layout_paddingLeftPercent="4.2%"
        app:layout_paddingRightPercent="4.2%"
        android:drawableRight="@mipmap/release_arrow"
        android:gravity="center_vertical"
        style="@style/black1_15"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        app:layout_marginLeftPercent="4.2%"
        android:background="@color/gray6"/>
    <TextView
        android:id="@+id/sale_recode"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="7.8%"
        android:text="@string/sale_deal_recode"
        app:layout_marginLeftPercent="4.2%"
        app:layout_marginRightPercent="4.2%"
        android:drawableRight="@mipmap/release_arrow"
        android:gravity="center_vertical"
        style="@style/black1_15"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        app:layout_marginLeftPercent="4.2%"
        android:background="@color/gray6"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="3%"
        android:background="@color/gray6"/>

</com.zhy.android.percent.support.PercentLinearLayout>